<view class="wx-popup" hidden="{{flag}}">
	<view class='popup-container'>
		<view class="wx-popup-title">{{title}}</view>
		<view class="wx-popup-con">
			<!-- <text wx:for='{{content}}' wx:key="idx" wx:for-item="item">{{item.matter_name}}</text> -->
			<mp-checkbox-group prop="checkbox" multi="{{true}}" bindchange="checkGroupChange">

				<mp-checkbox wx:for="{{content}}" wx:key="idx" wx:for-item="item" value="{{item.matter_name}}" checked="{{item.checked}}" label="{{item.matter_name}}" />
			</mp-checkbox-group>
      <image></image>
		</view>
		<view class="wx-popup-btn">
			<text class="btn-no" bindtap='_error'>{{btn_no}}</text>
			<text class="btn-ok" bindtap='_success'>{{btn_ok}}</text>
		</view>
	</view>
</view>